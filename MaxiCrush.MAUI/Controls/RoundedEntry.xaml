<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaxiCrush.MAUI.Controls.RoundedEntry"
             x:Name="this"
             Padding="0" BorderColor="Transparent" HeightRequest="40">

    <Entry
           Placeholder="{Binding Source={x:Reference this},Path=Placeholder}"
           PlaceholderColor="{Binding Source={x:Reference this},Path=PlaceholderColor}"
           Margin="10, 3, 0, 0" HorizontalTextAlignment="Start"
           VerticalTextAlignment="Center"
           Text="{Binding Source={x:Reference this},Path=Text}"
           FontAttributes="{Binding Source={x:Reference this},Path=FontAttributes}"
           FontFamily="{Binding Source={x:Reference this},Path=FontFamily}"
           FontSize="{Binding Source={x:Reference this},Path=FontSize}"
           TextColor="{Binding Source={x:Reference this}, Path=TextColor}"/>
    
</Frame>
