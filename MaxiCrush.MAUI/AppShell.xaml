<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MaxiCrush.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MaxiCrush.MAUI"
    xmlns:views="clr-namespace:MaxiCrush.MAUI.MVVM.Views"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="White" StatusBarStyle="DarkContent"/>
    </Shell.Behaviors>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:WelcomeView}"
        Route="MainPage" />

</Shell>
